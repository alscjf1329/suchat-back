# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_DATABASE=suchat

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server
PORT=8000
NODE_ENV=development

# JWT Authentication (최소 32자 이상의 랜덤 문자열)
# 생성 명령: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_very_secure_key

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_PATH=./uploads

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@suchat.com
FRONTEND_URL=http://localhost:3000

# PWA Push Notifications (VAPID)
# Generate VAPID keys using: pnpm exec web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@suchat.com

# Database Mode (true = 메모리, false = PostgreSQL)
USE_MEMORY_DB=false
